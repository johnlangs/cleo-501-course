<link rel="stylesheet" href="assets/stylesheets/application.css">

<%= form_with(model: requirement) do |form| %>
  <% if requirement.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(requirement.errors.count, "error") %> prohibited this requirement from being saved:</h2>

      <ul>
        <% requirement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :degree_plan_id, style: "display: block" %>
    <%= form.select :degree_plan_id, options_from_collection_for_select(DegreePlan.all, :id, :name), prompt: 'Select a degree plan' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
