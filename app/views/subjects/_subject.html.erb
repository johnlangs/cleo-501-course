<div id="<%= dom_id subject %>">
  <table>
    <tr>
      <th>ID:</th>
      <td><%= subject.id %></td>
    </tr>
    <tr>
      <th>Name:</th>
      <td><%= subject.name %></td>
    </tr>
    <tr>
      <th>Code:</th>
      <td><%= subject.code %></td>
    </tr>
    <tr>
      <th>Courses:</th>
      <td>
        <% subject.courses.each do |course| %>
          <%= link_to course.name, course %><br/>
        <% end %>
      </td>
    </tr>
  </table>
</div>
