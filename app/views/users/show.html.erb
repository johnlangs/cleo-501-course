<link rel="stylesheet" href="assets/stylesheets/application.css">

<p style="color: green"><%= notice %></p>

<p><strong>Name:</strong> <%= @user.full_name %></p>
<p><strong>Email:</strong> <%= @user.email %></p>
<p><strong>Major:</strong> <%= @user.major %></p>
<p><strong>Preferred Subject:</strong> <%= @preference || "Not selected" %></p>


<div>
  <%= link_to "Edit this user", edit_user_profile_path %>

  <%= button_to "Destroy this user", @user, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "delete" %>
</div>
