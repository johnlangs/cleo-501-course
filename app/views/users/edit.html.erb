<h1 class="heading">Edit Profile</h1>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :major_id, "Major" %><br>
    <%= f.select :major_id, @majors, { include_blank: 'Select a Major' }, { required: true } %>
  </div>
  <div class="field">
    <%= f.label :preference_id, "Preferred Subject" %><br>
    <%= f.select :preference_id, @subjects, { include_blank: 'Select a Subject' }, { required: true } %>
  </div>
  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>
